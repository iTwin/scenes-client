{
  "$id": "/schemas/View3d.1.0.0",
  "description": "Representation of a 3D view",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "position": {
      "$ref": "/schemas/CommonTypes#/definitions/vector3d",
      "description": "Location of the eye of the camera."
    },
    "isOrthographic": {
      "type": "boolean",
      "description": "Whether the view is orthographic or perspective"
    },
    "aspectRatio": {
      "type": "number",
      "description": "Aspect ratio of the view"
    },
    "direction": {
      "$ref": "/schemas/CommonTypes#/definitions/vector3d",
      "description": "Direction the camera is pointing towards"
    },
    "up": {
      "$ref": "/schemas/CommonTypes#/definitions/vector3d",
      "description": "Defines 'up' direction relative to camera in the view"
    },
    "near": {
      "type": "number",
      "description": "Near plane distance"
    },
    "far": {
      "type": "number",
      "description": "Far plane distance"
    },
    "fov": {
      "type": "number",
      "description": "Angle of the field of view in radians for perspective views"
    },
    "width": {
      "type": "number",
      "description": "Width of the frustum in meters for orthographic views"
    },
    "ecefTransform": {
      "$ref": "/schemas/CommonTypes#/definitions/transform",
      "description": "Earth-Centered, Earth-Fixed transform"
    }
  },
  "required": [ "position", "isOrthographic", "aspectRatio", "direction", "up", "near", "far", "ecefTransform" ]
}
